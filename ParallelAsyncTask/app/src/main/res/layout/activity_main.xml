<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    tools:context="com.tech.gigabyte.parallelasynctask.MainActivity">

    <Button
        android:id="@+id/start_bt"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/my_style"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/start"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_bt"
        android:layout_marginTop="30sp"
        android:orientation="vertical">


        <ProgressBar
            android:id="@+id/one_pb"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/pb_style"
            android:indeterminate="false"
            android:max="10"
            android:progress="0" />

        <ProgressBar
            android:id="@+id/two_pb"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30sp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/pb_style"
            android:indeterminate="false"
            android:max="10"
            android:progress="0" />

        <ProgressBar
            android:id="@+id/three_pb"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50sp"
            android:layout_marginStart="50sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/pb_style"
            android:indeterminate="false"
            android:max="10"
            android:progress="0" />

        <ProgressBar
            android:id="@+id/four_pb"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30sp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/pb_style"
            android:indeterminate="false"
            android:max="10"
            android:progress="0" />

        <ProgressBar
            android:id="@+id/five_pb"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/pb_style"
            android:indeterminate="false"
            android:max="10"
            android:progress="0" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#617e8c"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/downloading"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>